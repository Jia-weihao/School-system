# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# 所有文件的通用设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript/TypeScript 文件
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 120

# JSON 文件
[*.json]
indent_size = 2

# CSS/SCSS/LESS 文件
[*.{css,scss,less}]
indent_size = 2

# HTML 文件
[*.html]
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# YAML 文件
[*.{yml,yaml}]
indent_size = 2

# 包管理文件
[package.json]
indent_size = 2

# 配置文件
[*.config.{js,ts}]
indent_size = 2